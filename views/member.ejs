<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: black;
        color: white;
      }

      .profile-header {
        text-align: center;
        padding: 40px 20px;
        background-color: black;
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
      }

      .profile-header img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        /* object-position: center; */
        border: 2px solid #ddd;
      }

      .profile-header h1 {
        margin: 10px 0 5px;
        font-size: 2em;
      }

      .profile-header p {
        margin: 5px 0;
        color: white;
      }

      .profile-header .follow-info {
        margin-top: 10px;
        color: white;
      }

      .profile-header .btn-group {
        margin-top: 20px;
      }

      .profile-tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
      }

      .profile-tabs a {
        color: gray;
        margin: 0 10px;
        padding: 10px 20px;
        border-bottom: 2px solid transparent;
        text-decoration: none;
      }

      .profile-tabs a.active {
        color: black;
        border-bottom: 2px solid black;
      }

      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
        padding: 10px;
      }

      .gallery img {
        width: 100%;
        border-radius: 10px;
        transition: transform 0.3s;
      }

      .gallery img:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
  <body>
    <nav
      class="w-100 bg-black text-white text-black d-flex align-items-center justify-content-around py-3"
    >
      <div class="d-flex align-items-center justify-content-center">
        <h5>Pinterest</h5>
      </div>
      <div class="d-flex gap-4">
        <a class="btn btn-primary" href="/profile">Profile</a>
        <a class="btn btn-primary" href="/feed">Home</a>

        <a class="btn btn-danger" href="/logout">Logout</a>
      </div>
    </nav>

    <!-- Profile Header -->
    <div class="profile-header">
      <img src="/images/uploads/<%=user.profileImage || "default2.jpg" %>"
      alt="Profile Picture">
      <h1>@ <%= user.username %></h1>

      <p class="follow-info">
        <%=user.followers.length %> followers Â· <%=user.following.length %>
        following
      </p>
      <div class="btn-group">
        <a href="/follow/<%=user.id  %>" type="button" class="btn btn-danger">
          <%= user.followers.indexOf(loguser._id) == -1 ? "Follow" : "Following"
          %>
        </a>
      </div>
    </div>

    <!-- Profile Tabs -->

    <!-- Gallery -->
    <div class="container">
      <div class="gallery">
        <% user.userposts.forEach(function (post){ %>

        <a class="text-decoration-none" href="/feed/<%= post.id  %>">
          <div class="pin">
            <img src="/images/uploads/<%= post.image  %>" alt="Pin 1" />
          </div>
        </a>

        <% }) %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
