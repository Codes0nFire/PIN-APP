<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pinterest Feed</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        color: #333;
      }

      header {
        background-color: black;
        padding: 1em;
        text-align: center;
        color: white;
        border-top: 1px solid white;
      }

      .pins-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 16px;
        padding: 20px;

        background-color: black;
      }

      .pin {
        position: relative;
        background-color: #fff;

        overflow: hidden;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
        cursor: pointer;
        background-color: black;
        margin-bottom: 10vh;
        height: fit-content;
      }

      .pin:hover img {
        opacity: 0.5;
        transition: transform 0.6s ease-in-out;
      }

      .pin img {
        width: 100%;
        height: auto;

        transition: transform 0.6s ease-in-out;
      }

      .pin-content {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 12px;
        box-sizing: border-box;
        transition: background 0.3s ease-in-out;
        background: rgba(255, 255, 255, 0.8);
      }

      .pin:hover .pin-content {
        background: rgba(255, 255, 255, 0.95);
      }

      .pin h3 {
        text-align: center;
        font-size: 15px;
        font-weight: 500;
        color: white;

        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }

      .userdets {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2px;
        padding-bottom: 10px;
      }
      .userimg {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid red;
      }

      footer {
        text-align: center;
        padding: 1em;
        background-color: #fff;
      }
    </style>
  </head>
  <body>
    <nav
      class="w-100 bg-black text-white text-black d-flex align-items-center justify-content-around py-3"
    >
      <div class="d-flex align-items-center justify-content-center">
        <h5>Pinterest</h5>
      </div>
      <div class="d-flex gap-4">
        <a class="btn btn-primary" href="/profile">Profile</a>
        <a class="btn btn-warning" href="/leaderboard">Famous</a>

        <a class="btn btn-danger" href="/logout">Logout</a>
      </div>
    </nav>

    <header>
      <h1>feed</h1>

      <link
        href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
        rel="stylesheet"
      />
    </header>

    <div class="pins-container p-2">
      <% posts.reverse().forEach(elem => { %>

      <a class="text-decoration-none" href="/feed/<%= elem.id  %>">
        <div class="pin">
          <img src="<%=elem.image.url  %>" alt="Pin 1" />
        </div>
      </a>

      <% }); %>

      <!-- Add more pins as needed -->
    </div>

    <footer>&copy; 2024 Pinterest Pins</footer>
  </body>
</html>
